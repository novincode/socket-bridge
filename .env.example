# Socket Bridge Configuration
# ---------------------------
# This file contains environment variables for configuring the Socket Bridge application.
# Copy this file to .env and modify the values as needed.

# Server Configuration
# -------------------
# Port the WebSocket server will listen on
SOCKET_BRIDGE_PORT=8080

# Authentication
# -------------
# API key for client authentication. If empty, authentication is disabled.
# IMPORTANT: Change this to a secure value in production!
SOCKET_BRIDGE_API_KEY=your-secure-api-key-here

# Client Limits
# ------------
# Maximum number of concurrent connections allowed
SOCKET_BRIDGE_MAX_CLIENTS=10

# Message Settings
# --------------
# Maximum message size in bytes (default: 1MB)
SOCKET_BRIDGE_MAX_MESSAGE_SIZE=1048576

# Whether to announce client connections/disconnections to other clients
SOCKET_BRIDGE_ANNOUNCE_CONNECTIONS=true

# Security Settings
# ---------------
# Whether to validate the origin of WebSocket connections
SOCKET_BRIDGE_VALIDATE_ORIGIN=false

# Comma-separated list of allowed origins (if validation is enabled)
SOCKET_BRIDGE_ALLOWED_ORIGINS=http://localhost:3000,https://example.com

# Logging
# ------
# Enable verbose logging (true/false)
SOCKET_BRIDGE_VERBOSE=false

# Log file path (if empty, logs to console only)
SOCKET_BRIDGE_LOG_FILE=

# Performance
# ----------
# Heartbeat interval in milliseconds (0 to disable)
SOCKET_BRIDGE_HEARTBEAT_INTERVAL=30000

# Ping timeout in milliseconds
SOCKET_BRIDGE_PING_TIMEOUT=10000
